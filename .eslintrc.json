{
  "env": {
    "browser": false
  },
  "extends": "standard",
  "ecmaFeatures": {
    "modules": false
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
